<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Application_Gestion.Interfaces.Controls.CategorieSelecter"
>
    <Grid ColumnDefinitions="*,*" RowDefinitions="*,*">
        <Label x:Name="viewCategorie" Style="{x:DynamicResource Classic}"
            Grid.RowSpan="2" VerticalOptions="Center" HorizontalOptions="Start" 
        />

        <ImageButton x:Name="Up" Style="{x:DynamicResource ArrowUp}"
                     Grid.Column="1" Grid.Row="0" HorizontalOptions="End"
                     Margin="0,-10,0,0"
                     Clicked="Up_Clicked"
        />
        <ImageButton x:Name="Down" Style="{x:DynamicResource ArrowDown}"
                     Grid.Column="1" Grid.Row="1" HorizontalOptions="End"
                     Margin="0,0,0,-10"
                     Clicked="Down_Clicked"
        />
    </Grid>
</ContentView>
