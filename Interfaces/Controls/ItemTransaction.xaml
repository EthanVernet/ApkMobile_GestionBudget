<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Application_Gestion.Interfaces.Controls.ItemTransaction">
    <Grid RowDefinitions="30" ColumnDefinitions="*,*,*">
        <Label x:Name="Name" Style="{x:DynamicResource Classic}"
            Grid.Column="0"
        />

        <Label x:Name="Value" Style="{x:DynamicResource Classic}"
            Grid.Column="1"
        />

        <ImageButton x:Name="DeleteTransaction" Style="{x:DynamicResource Delete}"
            Grid.Column="2" HorizontalOptions="End"
            Clicked="DeleteTransaction_Clicked"
        />
    </Grid>
</ContentView>
